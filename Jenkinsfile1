pipeline {
    agent any
   tools {
        jdk 'JAVA_HOME'
        maven 'M2_HOME'
    }

    stages {
        stage('GitHub project pull') {
            steps {
                git branch: 'main', url: 'https://github.com/Sonishraj/jenkins.git'
            }
            
        }
        stage('mavenbuild'){
            steps {
                sh "mvn package -Dmaven.test.skip"
            }
        }
        stage('maven docker build') {
            steps {
                sh 'docker build -t sonishraj/app .'
            }
        }
        stage('docker hub') {
            steps {
                sh 'docker push sonishraj/app:latest'
            }
        }
    }
}
